<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\CodeGenerator.Core.Workspaces\CodeGenerator.Core.Workspaces.csproj" />
    <ProjectReference Include="..\..\CodeGenerator.Plugin.Abstractions\CodeGenerator.Plugin.Abstractions.csproj" />
  </ItemGroup>

  <Target Name="CopyPluginToTestFolder" AfterTargets="Build">
    <PropertyGroup>
      <PluginTargetFolder>D:\Cloud\GitHub\test\Plugins\CodeGenerator.Plugin.TestPlugin</PluginTargetFolder>
    </PropertyGroup>
    <MakeDir Directories="$(PluginTargetFolder)" Condition="!Exists('$(PluginTargetFolder)')" />
    <ItemGroup>
      <PluginOutputFiles Include="$(OutputPath)\**\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(PluginOutputFiles)"
          DestinationFiles="@(PluginOutputFiles->'$(PluginTargetFolder)\%(RecursiveDir)%(Filename)%(Extension)')"
          SkipUnchangedFiles="true" />
  </Target>

</Project>
